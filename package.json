{
  "name": "task-manager-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main/server.ts",
    "start": "node -r module-alias/register dist/main/server.js",
    "prisma:generate": "prisma generate --schema=src/infra/database/mysql/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/infra/database/mysql/schema.prisma",
    "prisma:reset": "prisma migrate reset --force --schema=src/infra/database/mysql/schema.prisma",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "build": "npm run tsoa:routes && npm run tsoa:spec && tsc",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "eslint . --config eslint.config.mjs --fix",
    "format": "prettier --write .",
    "test":	"jest --runInBand --forceExit",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "tsoa",
    "prisma",
    "task-manager"
  ],
  "author": "Marlon Lacerda",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.2",
    "prettier": "^3.5.3",
    "prisma": "^6.10.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsoa": "^6.6.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "_moduleAliases": {
    "@src": "dist",
    "@domain": "dist/domain",
    "@infra": "dist/infra",
    "@main": "dist/main",
    "@presentation": "dist/presentation",
    "@shared": "dist/shared"
  }
}
