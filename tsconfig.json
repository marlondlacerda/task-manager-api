{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@modules/*": ["modules/*"]
    },
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
